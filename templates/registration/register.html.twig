{% extends 'base.html.twig' %}

{% block title %}FreshBurst - Inscription{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Inscription</h1>
        {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
        <p class="mt-3">Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
    </div>
{% endblock %}