{% extends 'base.html.twig' %}

{% block title %}FreshBurst - Gestion des catégories{% endblock %}

{% block body %}
    <h1>Gestion des catégories</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    <a href="{{ path('admin_category_new') }}">Ajouter une catégorie</a>
    <table border="1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}">Modifier</a>
                        <form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucune catégorie trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_index') }}">Retour au back-office</a>
{% endblock %}