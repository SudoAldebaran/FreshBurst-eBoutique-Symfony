{% extends 'base.html.twig' %}

{% block title %}FreshBurst - Gestion des produits{% endblock %}

{% block body %}
    <h1>Gestion des produits</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    <a href="{{ path('admin_product_new') }}">Ajouter un produit</a>
    <table border="1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.category ? product.category.name : 'Aucune' }}</td>
                    <td>{{ product.price }} €</td>
                    <td>
                        <a href="{{ path('admin_product_edit', {'id': product.id}) }}">Modifier</a>
                        <form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun produit trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_index') }}">Retour au back-office</a>
{% endblock %}