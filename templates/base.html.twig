<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}FreshBurst{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚡️</text></svg>">
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <a href="{{ path('app_home') }}">Accueil</a> |
            <a href="{{ path('app_cart') }}">Panier</a> |
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_index') }}">Back-office</a> |
            {% endif %}
            {% if app.user %}
                <a href="{{ path('app_profile') }}">Mon profil</a> |
                Bonjour {{ app.user.name }} | <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}">Connexion</a> | <a href="{{ path('app_register') }}">Inscription</a>
            {% endif %}
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>